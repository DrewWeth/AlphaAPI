<h1>New post</h1>

<%= render 'form' %>

<%= link_to 'Back', posts_path %>

<label>Accuracy</label>
<div id="acc">
</div>



<script>
$(document).ready(function(){

  navigator.geolocation.getCurrentPosition(GetLocation);
  function GetLocation(location) {
    $('#post_latitude' ).val(location.coords.latitude);
    $('#post_longitude').val(location.coords.longitude);
    $('#acc').html(location.coords.accuracy);
  }


});
</script>
