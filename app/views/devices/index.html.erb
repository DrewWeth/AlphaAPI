<h1>Listing devices</h1>

<table>
  <thead>
    <tr>
      <th>Device id</th>
      <th>Auth key</th>
      <th>Parse token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.id %></td>
        <td><%= device.auth_key %></td>
        <td><%= device.parse_token %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path %>
<br>
<%= link_to 'Register new device', register_path, :method => 'post' %>
